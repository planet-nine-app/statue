{
	"name": "statue-ssg",
	"version": "0.3.0",
	"description": "A simple static site generator for markdown content with vanilla HTML/CSS",
	"type": "module",
	"main": "src/index.js",
	"exports": {
		".": {
			"default": "./src/index.js"
		},
		"./cms/*": "./src/lib/cms/*",
		"./styles.css": "./src/styles/main.css",
		"./package.json": "./package.json"
	},
	"bin": {
		"statue-setup": "./postinstall.js",
		"statue": "./scripts/statue-cli.js"
	},
	"files": [
		"src",
		"content",
		"static",
		"templates",
		"site.config.js",
		"postinstall.js",
		"scripts",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"dev": "node src/dev-server.js",
		"build": "node src/build.js",
		"postbuild": "node scripts/generate-seo-files.js",
		"preview": "npx -y serve build",
		"prepublishOnly": "npm run build",
		"setup": "node postinstall.js",
		"release": "npm run build && npm publish",
		"test:local": "./test/hermetic/test_local.sh",
		"template:load": "node scripts/manage-templates.js load",
		"template:save": "node scripts/manage-templates.js save",
		"template:list": "node scripts/manage-templates.js list"
	},
	"devDependencies": {
		"@types/node": "^22.13.13",
		"rimraf": "^5.0.10"
	},
	"dependencies": {
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"fs-extra": "^11.3.0",
		"gray-matter": "^4.0.3",
		"marked": "^15.0.7"
	},
	"keywords": [
		"static-site-generator",
		"markdown",
		"ssg",
		"static-site",
		"content-management",
		"vanilla-js"
	],
	"author": "Semih Polat",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/accretional/statue.git"
	},
	"bugs": {
		"url": "https://github.com/accretional/statue/issues"
	},
	"homepage": "https://github.com/accretional/statue#readme"
}
